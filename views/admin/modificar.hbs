<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar un nuevo comentario</h4>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-3">
                    <input type="text" class="form-control" id="usuario" name="calificacion" placeholder="Calificacion" value="{{novedad.calificacion}}">
                </div>
                <div class="mb-3">
                    <textarea type="text" class="form-control" name="titulo" placeholder="Titulo">{{novedad.titulo}}</textarea>
                </div>
                <div class="mb-3">
                    <textarea type="text" class="form-control" name="comentario" placeholder="Comentario">{{novedad.comentario}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>